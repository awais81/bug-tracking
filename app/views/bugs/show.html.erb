<h2 align="center">Title: <%= @bug.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
	<% if @bug.screenshot? %>
		<div align="center">
			<%= image_tag @bug.screenshot.thumb.url %>
		</div>
	<% end %>
	
	<h4 class="center description"><strong>Description:</strong></h4>

	<hr>

	<%= simple_format(@bug.description) %>
	<div class="form-group"></div>
	<div class="row">
		<div  class="col-xs-3">
					<b>Created by: </b>
					<%= @bug.creator.name%>

		</div>
		
		<div class="col-xs-3">
				<% if @bug.developer %>
					<b>Developer: </b>
					<%= @bug.developer.name %>
				<% end %>
		</div>
		<div class="col-xs-3">
				
			<b>Bug Type: </b>
			<%= @bug.bug_type %>
				
		</div>
		<div class="col-xs-3">
				
			<b>Bug Status: </b>
			<%= @bug.status %>
				
		</div>
		
	</div>
	<div class="form-group"></div>
	<div class="row">
		<div class=" article-actions col-xs-8">
			<% if can? :manage, @bug %>
				<%= link_to "Edit this bug", edit_project_bug_path(@project,@bug), class: "btn btn-xs btn-primary" %>

				<%= link_to "Delete this Bug", project_bug_path(@project,@bug), method: :delete,

				data: { confirm: "Are you sure you want to delete the bug?"},

				class: "btn btn-xs btn-danger" %>

				<%= link_to "View all articles", project_path(@project), class: "btn btn-xs btn-success" %>
			<%end%>
		</div>
		<div class="col-xs-4">
			<% if @bug.deadline %>
					<b class="bg-danger">Deadline: </b>
					<%= @bug.deadline.strftime("%D") %>
				<% end %>
		</div>
	</div>
	</div>
</div>